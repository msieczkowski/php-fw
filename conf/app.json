{
  "logger": {
    "type": "file",
    "path": "__DIR__/../var/logs/debug.log",
    "format": "%url% -> [%date%] - %message% !!!"
  },
  "routes": {
    "candidates": {
      "path": "/students",
      "methods": [
        "GET"
      ],
      "action": "Metinet:Controllers:CandidatesController::retrieveMemberList"
    },
    "hello": {
      "path": "/hello",
      "methods": [
        "GET"
      ],
      "action": "Metinet:Controllers:CandidatesController::sayHello"
    },
    "bonjour": {
      "path": "/bonjour",
      "methods": [
        "GET"
      ],
      "action": "Metinet:Controllers:CandidatesController::disBonjour"
    },
    "login": {
      "path": "/login",
      "methods": [
        "GET"
      ],
      "action": "Metinet:Controllers:AccountController::login"
    },
    "logout": {
      "path": "/logout",
      "methods": [
        "GET"
      ],
      "action": "Metinet:Controllers:AccountController::logout"
    },
    "register": {
      "path": "/register",
      "methods": [
        "GET"
      ],
      "action": "Metinet:Controllers:AccountController::register"
    }
  }
}
